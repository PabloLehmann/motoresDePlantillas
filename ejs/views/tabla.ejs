<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') -%>
</head>
<body>
    <main>
        <h1>Productos<h1/>

        <% if (productos) { %>
            <table>
                <thead>
                    <tr>
                        <th>Titulo</th>
                        <th>Precio</th>
                        <th>Imagen</th>
                    </tr>
                </thead>
                <tbody>
                    <% productos.forEach(function(producto) { %>
                        <tr>
                            <td><%= producto.titulo %></td>
                            <td><%= producto.precio %></td>
                            <td><img src="<%=producto.thumbnail%>" alt="<%=producto.titulo%>" style='width: 4rem;' /></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <h1>No hay productos</h1>
        <% } %>
        
        <a href="http://localhost:8080"><button>Agregar producto</button></a>

    </main>
</body>
</html>